@model List<S3Train.Web.Models.CartItem>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    decimal? OrderTotal = 0;
}
@section scripts{
    <script src="~/Scripts/cartController.js"></script>
}


<div class="product-big-title-area">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="product-bit-title text-center">
                    <h2>Shopping Cart</h2>
                </div>
            </div>
        </div>
    </div>
</div>
@if (Model.Count > 0)
{
    <div class="single-product-area">
        <div class="zigzag-bottom"></div>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="product-content-right">
                        <div class="woocommerce">
                            <table cellspacing="0" class="shop_table cart">
                                <thead>
                                    <tr>
                                        <th class="product-remove">&nbsp;</th>
                                        <th class="product-thumbnail">&nbsp;</th>
                                        <th class="product-name">Product</th>
                                        <th class="product-price">Price</th>
                                        <th class="product-quantity">Quantity</th>
                                        <th class="product-subtotal">Total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        OrderTotal += item.Product.Price * item.Quatity;
                                        <tr class="cart_item">
                                            <td class="product-remove">
                                                <a title="Remove this item" data-id="@item.Product.Id" class="btn-delete" href="#">X</a>
                                            </td>

                                            <td class="product-thumbnail">
                                                <a href="single-product.html"><img width="145" height="145" alt="poster_1_up" class="shop_thumbnail" src="@item.Product.Image"></a>
                                            </td>

                                            <td class="product-name">
                                                <a href="single-product.html">@item.Product.Name</a>
                                            </td>

                                            <td class="product-price">
                                                <span class="amount">@item.Product.Price</span>
                                            </td>

                                            <td class="product-quantity">
                                                <div class="quantity buttons_added">
                                                    <input type="number" class="txtQuantity" data-id="@item.Product.Id" size="4" title="Qty" value="@item.Quatity" min="1" step="1">
                                                </div>
                                            </td>

                                            <td class="product-subtotal">
                                                <span class="amount">@(item.Product.Price * item.Quatity)$</span>
                                            </td>
                                        </tr>
                                    }


                                    <tr>
                                        <td class="actions" colspan="6">
                                            <input type="submit" id="btnContinue" value="Continue Shop" name="update_cart" class="button">
                                            <input type="submit" id="btnUpdate" value="Update Cart" class="button" style="background:#80981f">
                                            <input type="submit" id="btnDeleteAll" value="Delete Cart" name="update_cart" class="button" style="background:#e2211d">
                                            <input type="submit" id="btnPayment" value="Checkout" name="proceed" class="checkout-button button alt wc-forward" style="background:#6f5b5b">
                                        </td>
                                    </tr>
                                </tbody>
                            </table>


                            <div class="cart_totals ">
                                <h2>Cart Totals</h2>

                                <table cellspacing="0">
                                    <tbody>
                                        <tr class="cart-subtotal">
                                            <th>Cart Subtotal</th>
                                            <td><span class="amount">@OrderTotal $</span></td>
                                        </tr>

                                        <tr class="shipping">
                                            <th>Shipping and Handling</th>
                                            <td>Free Shipping</td>
                                        </tr>

                                        <tr class="order-total">
                                            <th>Order Total</th>
                                            <td><strong><span class="amount">@OrderTotal $</span></strong> </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>




                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <span>Không có sản phẩm nào trong giỏ hàng</span>
}


